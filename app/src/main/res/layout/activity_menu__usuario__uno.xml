<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.leonardoperez.v3.Menuprincipal"

    android:background="@color/FondoActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descarga Uno"
        android:id="@+id/BT_Descarga_Uno"
        android:onClick="Descarga_FDA1"
        android:drawableLeft="@mipmap/gota2"
        android:drawableRight="@mipmap/gota2"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="left|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="114dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/ellashacen"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/BT_Descarga_Uno"
        >

    </LinearLayout>

</RelativeLayout>
