<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.leonardoperez.v3.Menuprincipal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descarga Uno"
        android:id="@+id/BT_Descarga_Uno"
        android:onClick="Descarga_Uno"
        android:drawableLeft="@mipmap/gota2"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="left|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/BT_Descarga_Tres"
        android:layout_alignEnd="@+id/BT_Descarga_Tres"
        android:layout_alignLeft="@+id/BT_Descarga_Cuatro"
        android:layout_alignStart="@+id/BT_Descarga_Cuatro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descarga Dos"
        android:id="@+id/BT_Descarga_Dos"
        android:drawableLeft="@mipmap/gota2"
        android:layout_below="@+id/BT_Descarga_Uno"
        android:layout_alignLeft="@+id/BT_Descarga_Uno"
        android:layout_alignStart="@+id/BT_Descarga_Uno"
        android:layout_alignRight="@+id/BT_Descarga_Tres"
        android:layout_alignEnd="@+id/BT_Descarga_Tres"
        android:onClick="Descarga_Dos" />

    <Button        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descarga Tres"
        android:id="@+id/BT_Descarga_Tres"
        android:drawableLeft="@mipmap/gota2"
        android:layout_below="@+id/BT_Descarga_Dos"
        android:layout_alignRight="@+id/BT_Descarga_Cuatro"
        android:layout_alignEnd="@+id/BT_Descarga_Cuatro"
        android:layout_alignLeft="@+id/BT_Descarga_Cuatro"
        android:layout_alignStart="@+id/BT_Descarga_Cuatro"
        android:onClick="Descarga_Tres" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descarga Cuatro"
        android:id="@+id/BT_Descarga_Cuatro"
        android:drawableLeft="@mipmap/gota2"
        android:layout_below="@+id/BT_Descarga_Tres"
        android:layout_centerHorizontal="true"
        android:onClick="Descarga_Cuatro" />
</RelativeLayout>
